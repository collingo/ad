#ad {
	width: 300px;
	height: 300px;
	position: relative;
  overflow: hidden;
  border:1px solid black;

	h1 {
		text-align: center;
    margin:0;
    height:10%;
	}
	.nav {
		width: 30px;
		height: 30px;
		position: absolute;
		top: calc(50% - 15px);
    cursor: pointer;
    text-align:center;
    line-height:30px;
    font-size: 2.5em;
    z-index:100;
		
		&.left {
			left:0;
		}
		&.right {
			right:0;
		}
	}
	ul {
		width: 300%;
		height: 90%;
    list-style: none;
    padding:0;
    margin:0;
    position:relative;
    left:-300px;
  
    li {
      width: 300px;
      height: 100%;
      list-style: none;
      padding:0;
      margin:0;
      float:left;
      background-color: rgb(100,100,0);
      position: absolute;
      transition: left 0.34s ease-in-out;
      left:300px;
      // opacity:0.2;
      
      &:first-child {
        background-color: rgb(100,0,100);
      }
      &:last-child {
        background-color: rgb(0,100,100);
      }
      &.left {
        left:0px;
      }
      &.current {
        z-index: 99;
      }
      &.right {
        left:600px;
      }
      
      .content {
        height:210px;
        width:260px;
        margin:20px 20px 0;
        background-color: rgba(255,255,255,0.5);
        line-height:210px;
        text-align:center;
      }
      .caption {
        margin:0;
        text-align:center;
        line-height:40px;
        width:300px;
      }
    }
	}
}